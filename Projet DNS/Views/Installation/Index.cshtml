@{
}
<div class="register-logo">
    <a href="index2.html"><b>Project</b> <img src="~/img/logo.png" alt="Project DNS Logo" style="height: 100px;"></a>
</div>

@if (ViewBag.Erreur != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.Erreur
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card">
    <div class="card-body register-card-body">
        <p class="login-box-msg">Bonjour et bienvenue sur le projet DNS.<br />Nous allons configurer le projet pour votre première connexion.</p>

        <form method="post">
            <label for="email">Adresse e-mail</label>
            <div class="input-group mb-3">
                <input name="email" type="email" class="form-control" placeholder="E-mail...">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <label for="password">Mot de passe</label>
            <div class="input-group mb-3">
                <input name="password" type="password" class="form-control" placeholder="Mot de passe...">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <button class="btn btn-primary btn-block">Enregistrement</button>
        </form>
    </div>
</div>
