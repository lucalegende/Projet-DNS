@*
    Affichage des paramètres
*@
@{
    ViewData["Title"] = "Paramètres";
    ViewData["Active"] = "parametre";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Paramètres</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="d-flex justify-content-center">
            <!-- ./row -->
            <div class="row">
                <div class="col-sm-12">
                    <!-- Affichage si la Modification DNS est bon -->
                    @if (ViewBag.changePassword == true)
                    {
                        <div class="alert alert-success alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Modification réussie !</strong> Le mot de passe à bien été modifié.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    else if (ViewBag.changePassword == false)
                    {
                        <div class="alert alert-danger alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Modification échoué !</strong> Erreur lors du changement du mot de passe.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <!-- Affichage si suppresion du cache DNS est bon -->
                    @if (ViewBag.deleteCache == true)
                    {
                        <div class="alert alert-success alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Suppression réussie !</strong> Le cache DNS à bien été supprimé.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    else if (ViewBag.deleteCache == false)
                    {
                        <div class="alert alert-danger alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Suppression échouée !</strong> Impossible de supprimer le cache DNS (vous n'avez pas les droits).
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <!-- Affichage si restart serveur DNS est bon -->
                    @if (ViewBag.ServerRestart == true)
                    {
                        <div class="alert alert-success alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Redémarrage réussie !</strong> Le serveur DNS à bien été redémarrer.
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    else if (ViewBag.ServerRestart == false)
                    {
                        <div class="alert alert-danger alert-dismissible fade show col-sm-11" role="alert">
                            <strong>Redémarrage échoué !</strong> Le serveur DNS n'a pas pu redémarrer (vous n'avez pas les droits).
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        IP DNS local
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <input type="text" class="form-control" value="127.0.0.1" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card card-danger card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Administration système
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <form asp-action="deleteCacheDns">
                                            <button class="btn btn-default m-1">Supprimer le cache DNS</button>
                                        </form>
                                        <form asp-action="restartServeurDNS">
                                            <button class="btn btn-default m-1">Redémarrage du serveur DNS</button>
                                        </form>
                                        <form asp-action="restartAll">
                                            <button class="btn btn-default m-1">Redémarrage Global</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Changement de mot de passe -->
                        <div class="col-sm-6">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Changement mot de passe
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <form method="post" asp-action="changePassword">
                                                <div class="form-group">
                                                    <label>E-mail</label>
                                                    <input type="email" name="email" class="form-control" placeholder="E-mail...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Ancien mot de passe</label>
                                                    <input type="password" name="password" class="form-control" placeholder="Mot de passe...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Nouveau mot de passe</label>
                                                    <input type="password" name="newPassword" class="form-control" placeholder="Nouveau mot de passe...">
                                                </div>
                                                <button class="btn btn-primary">Confirmer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
