@*
    Affichage des paramètres
*@
@{
    ViewData["Title"] = "Paramètres";
    ViewData["Active"] = "parametre";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Paramètres</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div style="width: 700px">

            <!-- Affichage si la Modification DNS est bon -->
            @if (ViewBag.changePassword == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Modification Réussi !</strong> Le mot de passe à bien été modifier.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else if (ViewBag.changePassword == false)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Modification Échouer !</strong> Erreur lors du changement du mot de passe.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Affichage si suppresion du cache DNS est bon -->
            @if (ViewBag.deleteCache == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Suppresion Réussi !</strong> Le Cache DNS à bien été supprimer.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else if (ViewBag.deleteCache == false)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Suppresion Échouer !</strong> Impossible de supprimer le cache DNS (Vous n'avez pas les droits).
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Affichage si restart serveur DNS est bon -->
            @if (ViewBag.ServerRestart == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Redémarrage Réussi !</strong> Le serveur DNS à bien redémarrer.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else if (ViewBag.ServerRestart == false)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Redémarrage Échouer !</strong> Le serveur DNS n'a pas pu redémarrer. (Vous n'avez pas les droits)
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center">
            <!-- ./row -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="card card-primary card-outline" style="height : 385px;">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Dns inversé
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>IP DNS local</label>
                                                <input type="text" class="form-control" value="127.0.0.1" disabled>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Changement de mot de passe -->
                        <div class="col-sm-6">
                            <div class="card card-primary card-outline">
                                <div class="card-header">
                                    <h3 class="card-title">
                                        Changement mot de passe
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <form method="post" asp-action="changePassword">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="text" name="email" class="form-control" placeholder="Email...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Ancien mot de passe</label>
                                                    <input type="password" name="password" class="form-control" placeholder="Mot de passe...">
                                                </div>
                                                <div class="form-group">
                                                    <label>Nouveaux mot de passe</label>
                                                    <input type="password" name="newPassword" class="form-control" placeholder="Nouveaux mot de passe">
                                                </div>
                                                <button class="btn btn-primary">Confimer</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="card card-danger card-outline" style="width: 615px;">
                        <div class="card-header">
                            <h3 class="card-title">
                                Administration système
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <form asp-action="deleteCacheDns">
                                    <button class="btn btn-default mx-2">Supprimer Cache DNS</button>
                                </form>
                                <form asp-action="restartServeurDNS">
                                    <button class="btn btn-default mx-2">Redémarrage Serveur DNS</button>
                                </form>
                                <form asp-action="restartAll">
                                    <button class="btn btn-default mx-2">Redémarrage Global</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- /.content -->
