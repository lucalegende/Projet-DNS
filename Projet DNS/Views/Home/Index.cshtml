@{
    ViewData["Title"] = "TDB";
    ViewData["Active"] = "home";
    ViewData["chart"] = "home";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Tableaux de bord</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.TotalQuery</h3>

                        <p>Total de requêtes</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-aperture"></i>
                    </div>
                    <a id="queryLog" class="small-box-footer" asp-area="" asp-controller="QueryLog" asp-action="Index">Plus d'info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.TotalQueryBlocked</h3>

                        <p>Requêtes bloquer</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-minus-circled"></i>
                    </div>
                    <a id="queryLog" class="small-box-footer" asp-area="" asp-controller="QueryLog" asp-action="Index">Plus d'info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.PourcentBloquer<sup style="font-size: 20px">%</h3>

                        <p>Pourcentage de bloquer</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a id="graphics" class="small-box-footer" asp-area="" asp-controller="Graphics" asp-action="Index">Plus d'info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.TotalBlacklist</h3>

                        <p>Nombre de site bloquer</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-list-outline"></i>
                    </div>
                    <a id="blacklist" class="small-box-footer" asp-area="" asp-controller="Blacklist" asp-action="Index">Plus d'info <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="far fa-chart-bar"></i>
                            Chart des Requêtes (Sur 24 Heures)
                        </h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="line-chart" style="height: 300px;"></div>
                    </div>
                    <!-- /.card-body-->
                </div>
            </div>
        </div>
        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
